<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class:"user_info">
      <h1>
      <%= gravatar_for @user, size: 100 %>
      NAME: <%= @user.name %> <br>
      </h1>
      <p>
        E-MAIL: <%= @user.email %> <br>
        CREATED AT: <%= @user.created_at %> <br>
        CHANGED AT: <%= @user.updated_at %> <br>
        UTC-TIME NOW: <%= Time.now %>
      </p>
    </section>
  </aside>
</div>
    
 